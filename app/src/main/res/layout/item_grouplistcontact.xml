<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp"

    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:background="@android:color/background_light"
    android:fadingEdge="horizontal|vertical">


    <ImageView
        android:id="@+id/contactGroupImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        app:srcCompat="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivContactGroupRelationship"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/shape_circle" />

    <TextView
        android:id="@+id/tvGroupRelationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivContactGroupRelationship"
        android:layout_below="@+id/ivContactGroupRelationship"
        android:text="TextView" />

    <TextView
        android:id="@+id/myContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/contactGroupImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivContactGroupRelationship"
        android:layout_toEndOf="@+id/myContactName" />

</RelativeLayout>