<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriorityActivity">

    <Spinner
        android:id="@+id/spinnerParents"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@+id/spinnerFamily"
        android:layout_alignStart="@+id/spinnerFamily" />

    <Spinner
        android:id="@+id/spinnerFamily"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@+id/spinnerFriends"
        android:layout_alignStart="@+id/spinnerFriends"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerFriends"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@+id/spinnerClassmates"
        android:layout_alignStart="@+id/spinnerClassmates"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerClassmates"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@+id/spinnerProfessors"
        android:layout_alignStart="@+id/spinnerProfessors"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerProfessors"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtParents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/spinnerParents"
        android:layout_marginEnd="80dp"
        android:text="Parents" />

    <TextView
        android:id="@+id/txtFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/spinnerFamily"
        android:text="Family" />

    <TextView
        android:id="@+id/txtFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFamily"
        android:layout_alignTop="@+id/spinnerFriends"
        android:text="Friends" />

    <TextView
        android:id="@+id/txtClassmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/spinnerClassmates"
        android:text="Classmates" />

    <TextView
        android:id="@+id/txtProfessors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/spinnerProfessors"
        android:text="Professors" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="Set" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Group Priorities"
        android:textSize="24sp" />
</RelativeLayout>