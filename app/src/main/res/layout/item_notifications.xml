<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_delete_black_18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id= "@+id/view_foreground"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17dp"
            android:padding="5dp"
            app:srcCompat="@android:color/black" />

        <TextView
            android:id="@+id/tvNotificationBody"
            android:layout_width="240dp"
            android:layout_height="49dp"
            android:layout_below="@+id/tvNotificationUsername"
            android:layout_toEndOf="@+id/ivNotification" />

        <TextView
            android:id="@+id/tvNotificationUsername"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivNotification"
            android:layout_toEndOf="@+id/ivNotification"
            android:text="TextView" />





    </RelativeLayout>



</FrameLayout>