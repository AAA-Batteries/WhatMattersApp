<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp"

    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:background="@android:color/background_light"
    android:fadingEdge="horizontal|vertical">

    <ImageView
        android:id="@+id/imvFlag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/ivRelation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/ivRelation"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/contactImage"
        android:layout_toStartOf="@+id/tvUserName"
        android:elevation="5dp"
        app:srcCompat="@drawable/shape_circle" />

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:srcCompat="@android:color/background_dark"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contactImage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/contactImage"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/userPercentage"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="84dp" />


</RelativeLayout>