<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProfessors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign Up" />

    <Spinner
        android:id="@+id/spinnerParents"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinnerFamily"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/spinnerParents"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerFriends"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/spinnerFamily"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerClassmates"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/spinnerFriends"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerProfessors"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/spinnerClassmates"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtParents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerParents"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/spinnerParents"
        android:text="Parents" />

    <TextView
        android:id="@+id/txtFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerFamily"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/spinnerFamily"
        android:text="Family" />

    <TextView
        android:id="@+id/txtFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerFriends"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/spinnerParents"
        android:text="Friends" />

    <TextView
        android:id="@+id/txtClassmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerClassmates"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/spinnerParents"
        android:text="Classmates" />

    <TextView
        android:id="@+id/txtProfessors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerProfessors"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/spinnerParents"
        android:text="Professors" />
</RelativeLayout>