<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp"

    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:background="@android:color/background_light"
    android:fadingEdge="horizontal|vertical">


    <ImageView
        android:id="@+id/contactGroupImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imvFlag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/myRelation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/myContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/contactGroupImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivContactGroupRelationship"
        android:layout_toEndOf="@+id/myContactName" />

    <ImageView
        android:id="@+id/myRelation"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="89dp"
        app:srcCompat="@drawable/shape_circle" />

</RelativeLayout>