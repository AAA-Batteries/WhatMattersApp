<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/light_background"
  >


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="130dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numberOfContacts"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="103dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/circleprogressBar"
        android:orientation="vertical"></LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:alpha="0.25"
        android:background="#b9dcd2" />


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="111dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="76dp"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/profileuserName"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtvPercentExplanation"
        android:layout_marginTop="99dp"
        android:fontFamily="@font/amiko"
        android:gravity="top"
        android:text="-"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/numberOfContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileuserName"
        android:layout_below="@+id/profileuserName"
        android:fontFamily="@font/amiko"
        android:text="-" />

    <ProgressBar
        android:id="@+id/circleprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="143dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_marginBottom="226dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <TextView
        android:id="@+id/txtvPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="271dp"
        android:layout_marginStart="88dp"
        android:fontFamily="@font/amiko"
        android:text="-"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="15sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/txtvPercentExplanation"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout1"
        android:layout_alignTop="@+id/circleprogressBar"
        android:padding="3dp"
        android:text="-"
        android:textStyle="italic" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_marginTop="230dp"
        android:src="@drawable/baseline_poll_black_dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="301dp"
        android:src="@drawable/baseline_star_black_dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="243dp"
        android:layout_toEndOf="@+id/imageView2"
        android:padding="3dp"
        android:text="Statistics"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/profileStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileuserName"
        android:layout_below="@+id/numberOfContacts"
        android:text="TextView"
        android:textStyle="italic" />

</RelativeLayout>