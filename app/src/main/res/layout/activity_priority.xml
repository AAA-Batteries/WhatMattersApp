<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriorityActivity"
    android:background="@color/light_background">

    <Spinner
        android:id="@+id/respinnerParents"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/respinnerFriends"
        android:layout_marginTop="203dp" />

    <Spinner
        android:id="@+id/respinnerFamily"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/respinnerParents"
        android:layout_alignStart="@+id/respinnerFriends"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/respinnerFriends"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/respinnerFamily"
        android:layout_alignStart="@+id/respinnerClassmates"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/respinnerClassmates"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/respinnerFriends"
        android:layout_alignStart="@+id/respinnerProfessors"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/respinnerProfessors"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/resetBtn"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/respinnerClassmates"
        android:layout_marginBottom="206dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtParents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/respinnerParents"
        android:layout_marginEnd="80dp"
        android:text="Parents"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txtFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/respinnerFamily"
        android:text="Family"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id="@+id/txtFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFamily"
        android:layout_alignTop="@+id/respinnerFriends"
        android:text="Friends"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id="@+id/txtClassmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/respinnerClassmates"
        android:text="Classmates"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id="@+id/txtProfessors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParents"
        android:layout_alignTop="@+id/respinnerProfessors"
        android:text="Professors"
        android:textColor="@android:color/background_dark"/>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:background="@color/button_green"
        android:text="reset" />

    <TextView
        android:id="@+id/resetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/amiko"
        android:text="Reprioritize Relationships"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/flower_reprioritize_png"
        android:layout_width="wrap_content"
        android:alpha=".50"
        android:layout_height="334dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/flower_signup_5" />
</RelativeLayout>